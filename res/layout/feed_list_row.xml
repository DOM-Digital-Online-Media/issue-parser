<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:background="#ffffff" android:gravity="left|center_vertical" android:paddingLeft="5dip" android:paddingRight="5dip" android:paddingBottom="2dip" android:paddingTop="2dip">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ydfgdfgh" android:textColor="#0e0e0e" android:textSize="14dip" android:ellipsize="marquee" android:textStyle="bold" android:maxLines="2" android:minLines="2" android:gravity="center_vertical"/>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="TextView"
            android:textColor="#888"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:text="TextView"
            android:textColor="#f00"
            android:textSize="10dip" style="bold"/>

    </RelativeLayout>

</LinearLayout>