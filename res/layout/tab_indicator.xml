<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_weight="1"
    android:orientation="vertical"
    
    android:background="@drawable/tab_indicator"
    android:layout_height="70dip" android:paddingBottom="3dip" android:paddingLeft="1dip" android:paddingRight="1dip">

    <ImageView android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher"
        
    android:layout_height="32dip" android:layout_width="36dip" android:scaleType="centerInside" android:layout_marginTop="5dip"/> 

    <TextView
        android:id="@+id/title"
        style="?android:attr/tabWidgetStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dip"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:textColor="@color/tab_text_color"
        android:textSize="13dip"
        android:textStyle="bold" />
    
</RelativeLayout>
